{
    "name": "portfolio",
    "version": "1.0.0",
    "author": "abderrahmen brinis",
    "private": true,
    "scripts": {
        "css": "npx tailwindcss -i public/assets/styles/main.css -o public/assets/styles/main.min.css --watch --jit --purge=\"./public/**/*.html\"",
        "server": "browser-sync start --config './browser-sync-config.js'",
        "develop": "concurrently 'npm:css -- --watch' 'npm:server-reload'",
        "build": "npm run css -- --env 'production'"
    },
    "browserslist": [
        "last 2 versions",
        "> 1%"
    ],
    "dependencies": {
        "@tailwindcss/aspect-ratio": "^0.2.0",
        "@tailwindcss/forms": "^0.3.2",
        "@tailwindcss/typography": "^0.4.0",
        "autoprefixer": "^10.2.5",
        "browser-sync": "^2.26.14",
        "concurrently": "^6.0.2",
        "cssnano": "^5.0.1",
        "daisyui": "^1.14.0",
        "postcss": "^8.2.10",
        "postcss-cli": "^8.3.1",
        "postcss-nested": "^5.0.5",
        "tailwindcss": "^2.1.1"
    }
}
